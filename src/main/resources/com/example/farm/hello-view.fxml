<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.farm.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Weather Widget -->
    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Weather Update" />
        
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="tempLabel" style="-fx-font-size: 14px;" text="Temperature: --Â°C" />
            <Label fx:id="humidityLabel" style="-fx-font-size: 14px;" text="Humidity: --%" />
        </HBox>
        
        <Label fx:id="descLabel" style="-fx-font-size: 14px; -fx-font-style: italic;" text="Condition: Loading..." />
        <Label fx:id="rainLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Forecast: --" />
    </VBox>

    <Button onAction="#onLivestockClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-min-width: 200px;" text="Livestock" />
    
    <Button onAction="#onVaccinationTrackerClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-min-width: 200px;" text="Vaccination Tracker" />

    <Button onAction="#onFarmFinanceClick" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-min-width: 200px;" text="Farm Finance" />

    <Button onAction="#onFarmProfileClick" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-min-width: 200px;" text="Farm Profile" />
</VBox>
