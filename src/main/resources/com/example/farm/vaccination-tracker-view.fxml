<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.farm.VaccinationTrackerController" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Vaccination Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="20.0">
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <ComboBox fx:id="animalIdComboBox" promptText="Animal ID" prefWidth="150.0"/>
                <DatePicker fx:id="dateGivenPicker" promptText="Date Given"/>
            </HBox>
            <HBox spacing="10.0">
                <TextField fx:id="vaccineNameField" promptText="Vaccine Name" prefWidth="150.0"/>
                <DatePicker fx:id="nextDueDatePicker" promptText="Next Due Date"/>
            </HBox>
        </VBox>
        <TextArea fx:id="notesArea" promptText="Notes" prefRowCount="3" prefWidth="200.0"/>
        <Button text="Add Record" onAction="#onAddRecordClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-height: 80;"/>
    </HBox>

    <TableView fx:id="vaccinationTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="animalIdColumn" text="Animal ID" prefWidth="100.0"/>
            <TableColumn fx:id="vaccineColumn" text="Vaccine" prefWidth="150.0"/>
            <TableColumn fx:id="dateGivenColumn" text="Date Given" prefWidth="120.0"/>
            <TableColumn fx:id="nextDueColumn" text="Next Due" prefWidth="120.0"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER">
        <Button text="Back to Home" onAction="#onBackToHomeClick" />
    </HBox>
</VBox>
