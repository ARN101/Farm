<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.farm.LoginController" spacing="20" alignment="CENTER" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <Label text="Welcome to the Farm" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Label text="Please login to continue" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>

    <VBox spacing="10" maxWidth="300">
        <Label text="Email"/>
        <TextField fx:id="emailField" promptText="Enter Email"/>
        
        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Enter Password"/>
        
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
    </VBox>

    <Button text="Login" onAction="#onLoginClick" defaultButton="true" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 300px; -fx-min-height: 40px;"/>

    <Label text="OR"/>

    <Button text="Create New Account" onAction="#onSignUpClick" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-border-color: #3498db; -fx-min-width: 300px; -fx-min-height: 40px;"/>

</VBox>
