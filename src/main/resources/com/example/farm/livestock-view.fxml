<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.farm.LivestockController" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Livestock Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10.0" alignment="CENTER">
        <TextField fx:id="typeField" promptText="Type (e.g. Cow)"/>
        <TextField fx:id="nameField" promptText="Name/Tag"/>
        <TextField fx:id="breedField" promptText="Breed"/>
    </HBox>

    <HBox spacing="10.0" alignment="CENTER">
        <TextField fx:id="ageField" promptText="Age (Years)"/>
        <ChoiceBox fx:id="healthStatusBox" prefWidth="150.0"/>
    </HBox>

    <HBox spacing="20.0" alignment="CENTER_RIGHT">
        <Button text="Add Animal" onAction="#onAddClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Delete" onAction="#onRemoveClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <TableView fx:id="animalTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100.0"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="100.0"/>
            <TableColumn fx:id="breedColumn" text="Breed" prefWidth="100.0"/>
            <TableColumn fx:id="ageColumn" text="Age" prefWidth="50.0"/>
            <TableColumn fx:id="healthColumn" text="Health" prefWidth="100.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Button text="Back to Home" onAction="#onBackToHomeClick" />
</VBox>
