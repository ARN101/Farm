<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.farm.FarmProfileController" spacing="15" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Farm Profile Settings" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="5">
        <Label text="Farm Name"/>
        <TextField fx:id="farmNameField" promptText="Enter Farm Name" maxWidth="400"/>
    </VBox>

    <VBox spacing="5">
        <Label text="City"/>
        <TextField fx:id="cityField" promptText="Enter City (e.g. Dhaka)" maxWidth="400"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Country"/>
        <TextField fx:id="countryField" promptText="Enter Country (e.g. Bangladesh)" maxWidth="400"/>
    </VBox>

    <Button text="Save Profile" onAction="#onSaveClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 150px; -fx-min-height: 40px;"/>

    <VBox VBox.vgrow="ALWAYS"/> <!-- Spacer -->

    <HBox alignment="CENTER_LEFT">
        <Button text="Back to Home" onAction="#onBackToHomeClick" />
    </HBox>
</VBox>
