<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.farm.FarmProfileController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Farm Profile Setting" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10.0" maxWidth="300">
        <TextField fx:id="farmNameField" promptText="Name of the Farm"/>
        <TextField fx:id="cityField" promptText="City"/>
        <TextField fx:id="countryField" promptText="Country"/>
    </VBox>

    <HBox spacing="20.0" alignment="CENTER">
        <Button text="Save Profile" onAction="#onSaveProfileClick"/>
        <Button text="Back to Home" onAction="#onBackToHomeClick"/>
    </HBox>
</VBox>
